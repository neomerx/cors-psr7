{
  "name": "neomerx/cors-psr7",
  "description": "Framework agnostic (PSR-7) CORS implementation (www.w3.org/TR/cors/)",
  "keywords": [
    "PSR-7",
    "PSR7",
    "Cross-Origin Resource Sharing",
    "Cross Origin Resource Sharing",
    "CORS",
    "www.w3.org",
    "w3.org",
    "neomerx"
  ],
  "homepage": "https://github.com/neomerx/cors-psr7",
  "support": {
    "issues": "https://github.com/neomerx/cors-psr7/issues"
  },
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "neomerx",
      "email": "info@neomerx.com"
    }
  ],
  "require": {
    "php": ">=8.0.0",
    "psr/http-message": "^1.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "mockery/mockery": "^1.0",
    "scrutinizer/ocular": "^1.4",
    "squizlabs/php_codesniffer": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.11"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Neomerx\\Cors\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Neomerx\\Tests\\Cors\\": "tests/"
    }
  },
  "scripts": {
    "test": ["@test-unit", "@test-cs", "@test-cs-fixer"],
    "test-unit": "XDEBUG_MODE=coverage phpunit --coverage-text --coverage-clover=coverage.clover",
    "test-unit-phpdbg": "phpdbg -qrr phpunit --coverage-text --coverage-clover=coverage.clover",
    "test-cs": "phpcs -p -s --standard=PSR2 ./src ./tests",
    "test-cs-fixer": "php-cs-fixer fix --diff --dry-run -v --allow-risky=yes --config=php-cs-fixer.dist.php",
    "cs-fixer": "php-cs-fixer fix --diff -v --ansi --allow-risky=yes --config=php-cs-fixer.dist.php"
  }
}
